<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/b9"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000">
    </RelativeLayout>

    <LinearLayout
       android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/abs"
            android:layout_weight="0.3">


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_weight="0.3">
            <TextView
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:text="Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="These amicable relations between the brothers were. however sometimes interrupted"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">
                <Button
                    android:background="#159b1c"
                    android:text="CLOSE"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent" />
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    />
                <Button
                    android:background="#159b1c"
                    android:text="START"
                    android:layout_width="0dp"
                    android:textColor="#ffffff"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="20dp">
        <View
        android:background="@drawable/ciry"
        android:layout_width="8dp"
            android:layout_margin="3dp"
        android:layout_height="8dp"/>
        <View
            android:background="@drawable/ciry"
            android:layout_width="8dp"
            android:layout_margin="3dp"
            android:layout_height="8dp"/>
        <View
            android:background="@drawable/ciry"
            android:layout_width="8dp"
            android:layout_margin="3dp"
            android:layout_height="8dp"/>
        <View
            android:background="@drawable/cr"
            android:layout_width="8dp"
            android:layout_margin="3dp"
            android:layout_height="8dp"/>

    </LinearLayout>

</RelativeLayout>