<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/one"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2FFFFFF"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/cirshape"
                android:src="@mipmap/a"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Strawberry &amp; Cereals"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Breakfast"
                android:textColor="#D3CDCD"
                android:layout_toRightOf="@+id/img1"
               android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/cimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:text="344"
                android:textColor="#D3CDCD"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/two"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2FFFFFF"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/cirshape"
                android:src="@mipmap/b" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Salad Light"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Lunch"
                android:textColor="#D3CDCD"
                android:layout_toRightOf="@+id/img1"
                android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/cimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:text="98"
                android:textColor="#D3CDCD"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/img1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/three"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2FFFFFF"
