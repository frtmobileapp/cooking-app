<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="click"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/batteryLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_top"
        android:onClick="click"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/more"/>

        <TextView
            android:id="@+id/tv_text_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_more"
            android:text="Explore"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_magnifying"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/tv_text_explore"
            android:background="@drawable/search"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/more_dot"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/top_log"/>

            <TextView
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Salads"
                android:textColor="#ffffff"/>

            <TextView
                android:ems="20"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="
L orem ipsum dolor sit amet, consectetur
adipiscing elit. Ut pretium pretium."
                android:textColor="#ffffff"/>

        </LinearLayout>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/viewPager"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="15dp"
            android:src="@drawable/dot"/>

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:maxHeight="15dp"
            android:src="@drawable/dot"/>

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="15dp"
            android:src="@drawable/dot"/>
    </LinearLayout>

</LinearLayout>