<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_margin="15dp"
       android:layout_width="match_parent"
       android:layout_height="250dp">

       <ImageView
           android:src="@mipmap/rra"
           android:scaleType="center"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />

       <RelativeLayout
           android:background="#88000000"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/title"
               android:textColor="#ffffff"
               android:textSize="24sp"
               android:text="S A L A D S"
               android:layout_centerInParent="true"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_below="@+id/title"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:textColor="#ffffff"
               android:textSize="16sp"
               android:text="Lorem ipsum dolor sit amet,consectetur\n   adipiscing elit.Ut pretium pretium."
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </RelativeLayout>

   <LinearLayout
       android:orientation="vertical"
    android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"

       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:layout_width="0dp"
               android:layout_weight="0.4"
               android:layout_height="200dp">
               <ImageView
                   android:src="@mipmap/bb"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


               <RelativeLayout
                   android:background="#55000000"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </RelativeLayout>


               <TextView
                   android:text="Nam dapibu."
                   android:textColor="#ffffff"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="30 minutes"
                   android:textStyle="bold"
                   android:layout_alignParentBottom="true"
                   android:layout_toEndOf="@+id/im1"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="15dp"
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:id="@+id/im1"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="15dp"
                   android:src="@mipmap/times"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:layout_width="0dp"
               android:layout_weight="0.4"
               android:layout_height="200dp">
               <ImageView
                   android:src="@mipmap/dd"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


               <RelativeLayout
                   android:background="#55000000"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </RelativeLayout>


               <TextView
                   android:text="Cras quis"
                   android:textColor="#ffffff"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="30 minutes"
                   android:textStyle="bold"
                   android:layout_alignParentBottom="true"
                   android:layout_toEndOf="@+id/im2"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="15dp"
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:id="@+id/im2"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="15dp"
                   android:src="@mipmap/times"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:layout_width="0dp"
               android:layout_weight="0.4"
               android:layout_height="200dp">
               <ImageView
                   android:src="@mipmap/ee"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


               <RelativeLayout
                   android:background="#55000000"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </RelativeLayout>


               <TextView
                   android:text="Nam dapibu."
                   android:textColor="#ffffff"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="30 minutes"
                   android:textStyle="bold"
                   android:layout_alignParentBottom="true"
                   android:layout_toEndOf="@+id/im3"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="15dp"
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:id="@+id/im3"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="15dp"
                   android:src="@mipmap/times"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:layout_marginLeft="15dp"
               android:layout_width="0dp"
               android:layout_weight="0.4"
               android:layout_height="200dp">
               <ImageView
                   android:src="@mipmap/aa"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


               <RelativeLayout
                   android:background="#55000000"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </RelativeLayout>


               <TextView
                   android:text="Nam dapibu."
                   android:textColor="#ffffff"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="15 minutes"
                   android:textStyle="bold"
                   android:layout_alignParentBottom="true"
                   android:layout_toEndOf="@+id/im4"
                   android:layout_marginBottom="15dp"
                   android:layout_marginLeft="15dp"
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:id="@+id/im4"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="15dp"
                   android:src="@mipmap/times"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </RelativeLayout>


       </LinearLayout>

   </LinearLayout>

</LinearLayout>
    </ScrollView>