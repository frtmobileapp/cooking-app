<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="hello"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_image11"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a1" />

            <ImageView
                android:id="@+id/id_image12"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a2" />

            <ImageView
                android:id="@+id/id_image13"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_image21"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a4" />

            <ImageView
                android:id="@+id/id_image22"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a5" />

            <ImageView
                android:id="@+id/id_image23"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_image31"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a7" />

            <ImageView
                android:id="@+id/id_image32"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a8" />

            <ImageView
                android:id="@+id/id_image33"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:padding="@dimen/image_space"
                android:scaleType="fitXY"
                android:src="@drawable/a9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>